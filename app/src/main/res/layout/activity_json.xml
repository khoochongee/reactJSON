<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnGetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Name"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnGetCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Course"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnGetAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Age"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnGetBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Books"    />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnGetLibraryId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Get Library Id"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnGetBorrowedBooks"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Get Borrowed Books"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnGetStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Get Status"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnGetFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Status"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:text="Show Your Data Here"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="center"/>


</LinearLayout>